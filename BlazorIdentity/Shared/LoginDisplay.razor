<AuthorizeView>
    <Authorized>
        <a href="Identity/Manage">Hello, @context.User.Identity.Name!</a>
        <form method="post" action="Identity/LogOut">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Register">Register</a>
        <a href="Identity/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
